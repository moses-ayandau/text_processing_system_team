<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>


<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.teamb.textprocessingtoolteamproject.controller.AppController">
    <TabPane fx:id="tabPane">
        <Tab text="Regex matching">
            <BorderPane>
                <top>
                    <HBox alignment="CENTER" prefHeight="69.0" prefWidth="657.0" spacing="10" style="-fx-padding: 10;">
                        <Label style="-fx-font-size: 20px;" text="Text Processor"/>
                    </HBox>
                </top>

                <center>
                    <HBox>
                        <!-- Wrap the content inside a ScrollPane to allow scrolling -->
                        <HBox maxWidth="950" minHeight="1000">
                            <ScrollPane minHeight="1000" fitToHeight="false" fitToWidth="true" hbarPolicy="AS_NEEDED"
                                        vbarPolicy="AS_NEEDED">
                                <VBox alignment="TOP_LEFT" prefHeight="500.0" prefWidth="990.0" spacing="15"
                                      style="-fx-padding: 20;">
                                    <VBox spacing="10">
                                        <Label style="-fx-font-size: 14px;" text="Input Text:"/>
                                    </VBox>
                                    <!-- TextArea for input -->

                                    <TextArea fx:id="textInputArea" maxHeight="-Infinity" maxWidth="-Infinity"
                                              minHeight="-Infinity" minWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT"
                                              prefHeight="200.0" prefWidth="775.0" promptText="Enter your text here..."
                                              style="-fx-background-color: transparent; -fx-text-fill: black; -fx-font-size: 14px;"
                                              wrapText="true"/>

                                    <HBox alignment="CENTER_RIGHT" spacing="10" maxHeight="-Infinity"
                                          maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                          nodeOrientation="LEFT_TO_RIGHT" prefWidth="775.0">
                                        <Button text="Import from file" style="-fx-align:right" onAction="#importFile"/>
                                    </HBox>

                                    <VBox spacing="10">
                                        <Label style="-fx-font-size: 14px;" text="Output:"/>
                                        <TextFlow fx:id="highlightedTextFlow" style="-fx-padding: 5;"/>
                                    </VBox>

                                </VBox>
                            </ScrollPane>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" prefHeight="310.0" prefWidth="107.0" spacing="10">

                            <HBox alignment="BOTTOM_CENTER" spacing="5"/>
                        </HBox>

                        <VBox prefHeight="65.0" prefWidth="479.0" spacing="10" VBox.vgrow="NEVER">
                            <children>
                                <VBox prefHeight="310.0" prefWidth="334.0" spacing="10.0">
                                    <VBox>
                                        <Label style="-fx-font-size: 14px;" text="Regex Pattern:"/>
                                        <TextField fx:id="regexField" maxHeight="-Infinity" maxWidth="-Infinity"
                                                   minHeight="-Infinity" minWidth="-Infinity" prefHeight="45.0"
                                                   prefWidth="371.0" promptText="Enter regex pattern..."
                                                   style="-fx-font-size: 14px;"/>
                                    </VBox>
                                    <HBox>
                                        <Label style="-fx-font-size: 14px;" text="Matches: "/>
                                        <Label fx:id="numMatches" style="-fx-font-size: 14px;" text="0"/>
                                    </HBox>
                                    <VBox style="-fx-padding: 20 0 0 0;">
                                        <Label style="-fx-font-size: 14px;" text="Replacement Text (Optional):"/>
                                        <TextField fx:id="replaceField" maxHeight="-Infinity" maxWidth="-Infinity"
                                                   minHeight="-Infinity" minWidth="-Infinity" prefHeight="49.0"
                                                   prefWidth="377.0" promptText="Replacement text..."
                                                   style="-fx-font-size: 14px;"/>
                                    </VBox>
                                    <padding>
                                        <Insets left="10.0"/>
                                    </padding>
                                </VBox>
                            </children>
                            <HBox style="-fx-padding:0 0 0 15;" spacing="10">
                                <Button text="List view" onAction="#handleFindMatches"/>
                                <Button fx:id="addCollectionButton" text="Add to Collection"
                                        onAction="#handleAddEntryToCollection"/>
                                <Button text="View Collections" onAction="#handleViewCollections"/>
                                <Button text="Save to file"/>

                                <!--                                <Button text="List view"/>-->
                                <!--                                <Button fx:id="addCollectionButton" text="Add to Collection"/>-->
                                <!--                                <Button text="View Collections"/>-->

                            </HBox>
                        </VBox>
                    </HBox>
                </center>
            </BorderPane>
        </Tab>
        <Tab text="Data Manipulation">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">
                <Label text="All Entries:" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                <TableView fx:id="collectionsTableView" prefWidth="800" prefHeight="400"
                           style="-fx-font-size: 14px; -fx-border-color: #ccc; -fx-border-width: 1px;">
                    <columns>
                        <TableColumn fx:id="titleColumn" text="Title" prefWidth="150"/>
                        <TableColumn fx:id="regexInputColumn" text="Regex Input" prefWidth="200"/>
                        <TableColumn fx:id="regexPatternColumn" text="Regex Pattern" prefWidth="200"/>
                        <TableColumn fx:id="replaceTextColumn" text="Replace Text" prefWidth="150"/>
                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200"/>
                    </columns>
                </TableView>
            </VBox>
        </Tab>

    </TabPane>
</VBox>

